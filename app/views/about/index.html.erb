<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, minimum-scale=1, user-scalable=no, minimal-ui">
  <title>spreeMarket</title>
  <link href='/stylesheets/bootstrap/bootstrap.min.css' rel="stylesheet" type="text/css" />
  <link href='/stylesheets/app.css' rel="stylesheet" type="text/css" />
  <script src="/javascripts/jquery-1.11.1.min.js" type="text/javascript"></script>
  <script src="/javascripts/bootstrap/bootstrap.min.js" type="text/javascript"></script>
  <script src="/javascripts/services.js" type="text/javascript"></script>
  <script src="/javascripts/controllers.js" type="text/javascript"></script>
</head>
<body>
<div>
<%= render 'layouts/header_top' %>
  <div class="row" style="margin: 0">
    <div class="container sub-cont">
      <div class="text" style="padding-bottom: 0">
        <h2>About us</h2>
        <p class="format"><%= @about_us_text %></p>
      </div>
    </div></div>
    <div class="row" style="background: #f6f6f6;margin: 0">
      <div class="container sub-cont">
        <div class="text" style="padding-bottom: 0">
          <h2>Our team</h2>
          <p class="format"><%= @our_team_text %></p>
        </div>
      </div>
    </div>
    <div class="row" style="background: #0099cc;  color: white;margin: 0">
      <div class="container sub-cont">
        <div class="text" >
          <h2>Work with us</h2>
          <p class="format"><%= @work_with_us_text %></p>
        </div>
        <div style="text-align: center">
          <button type="button" id="button_2" class="btn btn-default" style="  padding: 13px 23px;  font-size: 20px;  background-color: transparent; border-color: white; color: white">View open postions</button>
        </div>
      </div>
    </div>
  </div>
    <div class="row">
      <div class="container sub-cont">
        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel" style="  text-align: -webkit-center;">
          <ol class="carousel-indicators">
            <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
            <li data-target="#carousel-example-generic" data-slide-to="1"></li>
            <li data-target="#carousel-example-generic" data-slide-to="2"></li>
            <li data-target="#carousel-example-generic" data-slide-to="3"></li>
          </ol>
          <div class="carousel-inner" role="listbox">
            <div class="item active">
              <img src="images/slide1.jpg" alt="slide1">
            </div>
            <div class="item">
              <img src="images/slide2.jpg" alt="slider2">
            </div>
            <div class="item">
              <img src="images/slide3.jpg" alt="slider3">
            </div>
            <div class="item">
              <img src="images/slide4.jpg" alt="slider4">
            </div>
          </div>
        </div>
      </div>
    </div>
<%= render 'layouts/need_help' %>
</body>
</html>
